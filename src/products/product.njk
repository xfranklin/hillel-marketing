---
layout: layouts/base.njk
pagination:
  data: products
  size: 1
  alias: product
permalink: "products/{{ product.id }}/index.html"
eleventyComputed:
  title: "{{ product.name }}"
---

<article class="product-page">
  <img src="{{ product.image }}" alt="{{ product.name }}" class="product-page-image" />
  <div>
    <p class="product-meta">{{ product.category }}</p>
    <h1>{{ product.name }}</h1>
    <p class="product-price">${{ product.price }}</p>
    <p>{{ product.description }}</p>

    <div class="product-actions">
      <button
        type="button"
        class="add-button"
        data-add-to-cart
        data-product-id="{{ product.id }}"
        data-product-name="{{ product.name }}"
        data-product-price="{{ product.price }}"
        data-product-currency="{{ product.currency }}"
        data-product-image="{{ product.image }}"
        data-product-quantity="{{ product.quantity }}"
      >
        Add to cart
      </button>
      <a href="/" class="details-link">Back to products</a>
    </div>
  </div>
</article>
